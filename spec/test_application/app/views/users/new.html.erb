<% r(@user).form do |user| %>
  <%= user.label "Nick"%>
  <%= user.nick.text_field %>
  <% user.profile do |f|%>
    <%= f.name.label%>
    <%= f.name.text_field %>
    <br />
    <%= f.surname.label%>
    <%= f.surname.text_field %>
    <br />
    <%= f.eye_color.radio_button_label('blue')%>
    <%= f.eye_color.radio_button('blue') %>
    <br />
    <%= f.eye_color.radio_button_label('green', 'Green')%>
    <%= f.eye_color.radio_button('green') %>
    <br />
    <%= f.eye_color.radio_button_label('other', 'Different')%>
    <%= f.eye_color.radio_button('other') %>
    <br />
    <%= f.characteristics.label%>
    <%= f.characteristics.text_area %>
    <br />
  <%end%>
  <%= submit_tag('ok') %>
<%end%>
